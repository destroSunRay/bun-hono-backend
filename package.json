{
  "name": "bun-app",
  "version": "0.1.0",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:pull": "bunx drizzle-kit pull",
    "db:studio": "bunx drizzle-kit studio --port=5555",
    "better-auth:generate": "bunx @better-auth/cli@latest generate --config src/config/auth.ts --output ./src/features/auth/auth.models.ts",
    "docker:up": "docker compose up -d --build",
    "docker:logs": "docker compose logs -f",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d --build",
    "docker:down": "docker compose down --rmi local"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.3",
    "@scalar/hono-api-reference": "^0.9.20",
    "better-auth": "^1.3.26",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.9",
    "pg": "^8.16.3",
    "resend": "^6.1.2",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5"
  }
}
